{
  "name": "path-normalize",
  "description": "Zero-dependency browser-oriented path.normalize",
  "version": "7.0.0",
  "author": {
    "name": "Autumn Z"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib && mkdir -p lib",
    "postbuild": "cp src/index.js.flow lib/",
    "prebuild": "run-s test clean",
    "preversion": "npm run build",
    "test": "run-s test:lint test:unit",
    "test:lint": "sortpack && eslint src/*.ts --fix",
    "test:unit": "tsx --test --experimental-test-coverage src/*.test.ts"
  },
  "homepage": "https://github.com/zautumnz/path-normalize#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zautumnz/path-normalize.git"
  },
  "bugs": "https://github.com/zautumnz/path-normalize/issues",
  "keywords": [
    "normalize",
    "path",
    "path-normalize"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "eslint": "9.38.0",
    "eslint-config-love": "133.0.0",
    "npm-run-all": "4.1.5",
    "sortpack": "3.0.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  }
}
